{
	"$schema": "https://biomejs.dev/schemas/1.7.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": ["dist/**", "node_modules/**", ".tshy/**", "./out/**"]
	},
	"formatter": {
		"ignore": ["dist/**", "node_modules/**", ".tshy/**", "./out/**"],
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"trailingComma": "all",
			"arrowParentheses": "asNeeded"
		}
	}
}
